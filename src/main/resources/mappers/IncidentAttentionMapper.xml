<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ema.dao.IncidentAttentionMapper" >
  <resultMap id="BaseResultMap" type="com.ema.pojo.IncidentAttention" >
    <constructor >
      <arg column="user_id" jdbcType="INTEGER" javaType="java.lang.Integer" />
      <arg column="incident_id" jdbcType="INTEGER" javaType="java.lang.Integer" />
      <arg column="create_time" jdbcType="TIMESTAMP" javaType="java.util.Date" />
      <arg column="update_time" jdbcType="TIMESTAMP" javaType="java.util.Date" />
    </constructor>
  </resultMap>
  <insert id="insertSelective" parameterType="com.ema.pojo.IncidentAttention" >
    insert into incident_attention
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="userId != null" >
        user_id,
      </if>
      <if test="incidentId != null" >
        incident_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="userId != null" >
        #{userId,jdbcType=INTEGER},
      </if>
      <if test="incidentId != null" >
        #{incidentId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <insert id="insert" parameterType="map" >
    INSERT
    INTO incident_attention
    (user_id, incident_id)
    VALUES (#{userId}, #{incidentId})
  </insert>

  <delete id="deleteByUserIdAndIncidentId" parameterType="map">
    DELETE
    FROM incident_attention
    WHERE user_id = #{userId}
    AND incident_id = #{incidentId}
  </delete>

  <select id="selectCountByIncidentIdAndUserId" parameterType="map" resultType="int">
    SELECT
    COUNT(1)
    FROM incident_attention
    WHERE user_id = #{userId}
    AND incident_id = #{incidentId}
  </select>
</mapper>