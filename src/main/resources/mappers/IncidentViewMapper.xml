<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ema.dao.IncidentViewMapper" >
  <resultMap id="BaseResultMap" type="com.ema.pojo.IncidentView" >
    <constructor >
      <arg column="user_id" jdbcType="INTEGER" javaType="java.lang.Integer" />
      <arg column="incident_id" jdbcType="INTEGER" javaType="java.lang.Integer" />
      <arg column="create_time" jdbcType="TIMESTAMP" javaType="java.util.Date" />
      <arg column="update_time" jdbcType="TIMESTAMP" javaType="java.util.Date" />
    </constructor>
  </resultMap>
  <sql id="Base_Column_List" >
    user_id, incident_id, create_time, update_time
  </sql>
  <insert id="insert" parameterType="com.ema.pojo.IncidentView" >
    insert into incident_view (user_id, incident_id)
    values (#{userId,jdbcType=INTEGER}, #{incidentId,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.ema.pojo.IncidentView" >
    insert into incident_view
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="userId != null" >
        user_id,
      </if>
      <if test="incidentId != null" >
        incident_id,
      </if>
      create_time
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="userId != null" >
        #{userId,jdbcType=INTEGER},
      </if>
      <if test="incidentId != null" >
        #{incidentId,jdbcType=INTEGER},
      </if>
      now()
    </trim>
  </insert>

  <select id="selectCountByUserIdAndIncidentId" parameterType="map" resultType="int">
    SELECT
    COUNT(1)
    FROM incident_view
    WHERE user_id = #{userId}
    AND incident_id = #{incidentId}
  </select>

  <select id="selectByUserId" parameterType="integer" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"/>
    FROM incident_view
    WHERE user_id = #{userId}
    ORDER BY create_time
  </select>

</mapper>